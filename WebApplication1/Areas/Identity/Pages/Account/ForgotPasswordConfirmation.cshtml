@page
@model ForgotPasswordConfirmation
@{
    ViewData["Title"] = "Forgot Password Confirmation";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 p-4">
        <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
        <p class="lead text-muted mt-3">
            Please check your email to reset your password. If you don't see it in your inbox, make sure to check your spam or junk folder.
        </p>

        <div class="mt-4">
            <a class="btn btn-outline-primary w-100 btn-lg" asp-area="Identity" asp-page="/Account/ForgotPassword" role="button">
                Back to Forgot Password
            </a>
        </div>
    </div>
</div>

@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 p-4">
        <h1 class="display-5 fw-bold text-primary">@ViewData["Title"]</h1>
        <p class="lead text-muted mt-3">
            Please confirm your email by clicking the link we have sent to your inbox.
        </p>
        
        <partial name="_StatusMessage" model="Model.StatusMessage" />

        <div class="mt-4">
            <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Account/ResendEmailConfirmation" role="button">
                Resend Email
            </a>
        </div>
    </div>
</div>

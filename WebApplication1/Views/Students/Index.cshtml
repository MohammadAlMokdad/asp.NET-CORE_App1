@model IEnumerable<WebApplication1.Student>

@{
    ViewData["Title"] = "Students List";
}

<div class="container py-5">
    <div class="card shadow-lg border-0 p-4">
        <h1 class="display-5 fw-bold text-center text-primary">@ViewData["Title"]</h1>
        <p class="text-center mb-4">
            <a asp-action="Create" class="btn btn-success">Create New Student</a>
        </p>

        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.name)</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.id" class="btn btn-primary btn-sm">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.id" class="btn btn-info btn-sm">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.id" class="btn btn-danger btn-sm">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
